<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleColor="@color/ButtonPressed"
                app:mrl_rippleAlpha="0.1">

                <Button
                    android:id="@+id/btnNumpad1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:text="1"
                    android:textColor="@color/ButtonColor"
                    android:textSize="20sp" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleColor="@color/ButtonPressed"
                app:mrl_rippleAlpha="0.1">

                <Button
                    android:id="@+id/btnNumpad2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="2"
                    android:textColor="@color/ButtonColor"
                    android:textSize="20sp" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleColor="@color/ButtonPressed"
                app:mrl_rippleAlpha="0.1">


            <Button
                    android:id="@+id/btnNumpad3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="3"
                    android:textColor="@color/ButtonColor"
                    android:textSize="20sp" />
            </com.balysv.materialripple.MaterialRippleLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleColor="@color/ButtonPressed"
                app:mrl_rippleAlpha="0.1">

                <Button
                    android:id="@+id/btnNumpad4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="4"
                    android:textColor="@color/ButtonColor"
                    android:textSize="20sp" />

            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleColor="@color/ButtonPressed"
                app:mrl_rippleAlpha="0.1">

                <Button
                    android:id="@+id/btnNumpad5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="5"
                    android:textColor="@color/ButtonColor"
                    android:textSize="20sp" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleColor="@color/ButtonPressed"
                app:mrl_rippleAlpha="0.1">

                <Button
                    android:id="@+id/btnNumpad6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="6"
                    android:textColor="@color/ButtonColor"
                    android:textSize="20sp" />
            </com.balysv.materialripple.MaterialRippleLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleColor="@color/ButtonPressed"
                app:mrl_rippleAlpha="0.1">

                <Button
                    android:id="@+id/btnNumpad7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="7"
                    android:textColor="@color/ButtonColor"
                    android:textSize="20sp" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleColor="@color/ButtonPressed"
                app:mrl_rippleAlpha="0.1">

                <Button
                    android:id="@+id/btnNumpad8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="8"
                    android:textColor="@color/ButtonColor"
                    android:textSize="20sp" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleColor="@color/ButtonPressed"
                app:mrl_rippleAlpha="0.1">

                <Button
                    android:id="@+id/btnNumpad9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="9"
                    android:textColor="@color/ButtonColor"
                    android:textSize="20sp" />
            </com.balysv.materialripple.MaterialRippleLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleColor="@color/ButtonPressed"
                app:mrl_rippleAlpha="0.1">

                <ImageButton
                    android:id="@+id/btnNumpadEye"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_remove_red_eye_black_24dp" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleColor="@color/ButtonPressed"
                app:mrl_rippleAlpha="0.1">

                <ImageButton

                    android:id="@+id/btnNumpadBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_delete_black_24dp" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleColor="@color/ButtonPressed"
                app:mrl_rippleAlpha="0.1">

            <ImageButton
                    android:id="@+id/buttonCheckBoard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:onClick="onCheckBoardButtonClicked"
                    android:padding="4dp"
                    android:src="@drawable/ic_done_all_black_24dp"
                    android:visibility="invisible" />
            </com.balysv.materialripple.MaterialRippleLayout>

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toTopOf="@id/tableLayout2"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <fragment
                android:id="@+id/cellGroupFragment"
                android:name="com.eladper.sudoku.CellGroupFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="0" />

            <fragment
                android:id="@+id/cellGroupFragment2"
                android:name="com.eladper.sudoku.CellGroupFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="1" />

            <fragment
                android:id="@+id/cellGroupFragment3"
                android:name="com.eladper.sudoku.CellGroupFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="2" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <fragment
                android:id="@+id/cellGroupFragment4"
                android:name="com.eladper.sudoku.CellGroupFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="3" />

            <fragment
                android:id="@+id/cellGroupFragment5"
                android:name="com.eladper.sudoku.CellGroupFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="4" />

            <fragment
                android:id="@+id/cellGroupFragment6"
                android:name="com.eladper.sudoku.CellGroupFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="5" />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <fragment
                android:id="@+id/cellGroupFragment7"
                android:name="com.eladper.sudoku.CellGroupFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="6" />

            <fragment
                android:id="@+id/cellGroupFragment8"
                android:name="com.eladper.sudoku.CellGroupFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="7" />

            <fragment
                android:id="@+id/cellGroupFragment9"
                android:name="com.eladper.sudoku.CellGroupFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="8" />
        </TableRow>
    </TableLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="@+id/tableLayout"
        app:layout_constraintTop_toTopOf="@+id/tableLayout"
        android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>